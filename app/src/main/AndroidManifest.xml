<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.hubin.themeswitcher"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.android.hubin.themeswitcher.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ThemeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" android:launchMode="standard"/>
    </application>

</manifest>