<com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.android.hubin.themeswitcher.colorUi.widget.ColorButton
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/text_drawable"
        android:layout_centerHorizontal="true"
        android:text="Switch Theme"
        android:textAppearance="?attr/text_style_small"/>

    <com.android.hubin.themeswitcher.colorUi.widget.ColorListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:textAppearance="?attr/text_style_small"/>

</com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout>
