<com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.android.hubin.themeswitcher.colorUi.widget.ColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="?attr/btn_drawable"
        android:drawableBottom="?attr/btn_drawable"
        android:text="@string/app_name"
        android:textAppearance="?attr/text_style_big"/>

    <com.android.hubin.themeswitcher.colorUi.widget.ColorButton
        android:id="@+id/btn"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:background="?attr/text_drawable"
        android:text="换肤"
        android:textAppearance="?attr/text_style_small"/>

    <com.android.hubin.themeswitcher.colorUi.widget.ColorButton
        android:id="@+id/btn_2"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_below="@id/btn"
        android:layout_centerHorizontal="true"
        android:background="?attr/text_drawable"
        android:layout_marginTop="30dip"
        android:text="下一页"
        android:textAppearance="?attr/text_style_small"/>

    <com.android.hubin.themeswitcher.colorUi.widget.ColorImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_2"
        android:src="?attr/text_drawable"/>

</com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout>
