<com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.android.hubin.themeswitcher.colorUi.widget.ColorImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_2"
        android:layout_alignParentLeft="true"
        android:src="?attr/text_drawable"/>

    <com.android.hubin.themeswitcher.colorUi.widget.ColorTextView
        android:id="@+id/text_view"
        android:background="?attr/main_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="?attr/btn_drawable"
        android:drawableRight="?attr/btn_drawable"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textAppearance="?attr/text_style_big"/>


</com.android.hubin.themeswitcher.colorUi.widget.ColorRelativeLayout>
